= simple_form_for @card, remote: true, html: { class: 'form-horizontal' } do |f|
  = f.input :story
  = f.input :code, as: :string
  = f.input :points
  / # = f.input :color
  = f.input :project_id, as: :hidden, input_html: { value: project.id }
  = f.input :card_status_id, as: :hidden, input_html: { value: CardStatus.where(status: "To Do").first.id }
  .form-actions
    = f.button :submit, class: 'btn-primary', id: "new_card_submit"
    - if action == 'create'
      = link_to "Close", "#", class: 'btn', data: { dismiss: "modal" }