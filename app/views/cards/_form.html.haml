= simple_form_for @card, remote: @remote, html: { class: 'form-horizontal' } do |f|
  = f.input :story
  = f.input :code
  = f.input :points
  = f.input :project_id, as: :hidden, input_html: { value: @project_id } 
  = f.input :card_status_id, as: :hidden, input_html: { value: CardStatus.where(status: "To Do").first.id }
  .form-actions
    = f.button :submit, class: 'btn-primary', id: "new_card_submit"
    = link_to "Close", "#", class: 'btn', data: { dismiss: "modal" } if @remote